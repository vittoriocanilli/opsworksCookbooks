<%# This is the nginx site configuration file for logger %>

server {
  listen 80;
  server_name <%= @server_name.each{|name| "#{name}" }.join(" ") %>;
  return 301 https://$host$request_uri;
}

server {
  listen 443 ssl;
  ssl on;
  ssl_certificate /etc/nginx/ssl/<%= @ssl_cert_name %>.crt;
  ssl_certificate_key /etc/nginx/ssl/<%= @ssl_cert_name %>.key;
  ssl_client_certificate /etc/nginx/ssl/<%= @ssl_cert_name %>.ca;
  ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
  server_name <%= @server_name.each{|name| "#{name}" }.join(" ") %>;
  
  access_log  /var/log/nginx/logger-ssl.access.log;
  error_log   /var/log/nginx/logger-ssl.error.log;
  
  location / {
    proxy_pass                        https://127.0.0.1:3010;
    proxy_set_header Host             $http_host;
    proxy_set_header X-Real-IP        $remote_addr;
    proxy_set_header X-Forwarded-For  $proxy_add_x_forwarded_for;
  }
}